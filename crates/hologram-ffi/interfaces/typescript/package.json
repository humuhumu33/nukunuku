{
  "name": "hologram-ffi",
  "version": "0.1.0",
  "description": "TypeScript/Node.js bindings for Hologram Atlas runtime",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:release": "npm run build && npm run build:wasm",
    "build:wasm": "wasm-pack build --target nodejs --out-dir pkg",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist pkg",
    "prepublishOnly": "npm run build:release"
  },
  "keywords": [
    "atlas",
    "hologram",
    "ffi",
    "computing",
    "numerical",
    "typescript",
    "nodejs"
  ],
  "author": "Hologram Project <contact@hologram.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hologram-dev/hologram.git",
    "directory": "crates/hologram-ffi"
  },
  "bugs": {
    "url": "https://github.com/hologram-dev/hologram/issues"
  },
  "homepage": "https://hologram.dev",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^2.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^4.9.0",
    "wasm-pack": "^0.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
